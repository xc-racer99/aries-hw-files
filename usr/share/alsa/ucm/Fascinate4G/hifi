# Use case Configuration for Mobile device
# By Inha Song <ideal.song@samsung.com>

SectionVerb {
  EnableSequence [
# Playback
## Gain
    cset "name='AIF1DAC1 Volume' 96,96"
## Path
    cset "name='DAC1 Switch' on"
    cset "name='DAC1L Mixer AIF1.1 Switch' on"
    cset "name='DAC1R Mixer AIF1.1 Switch' on"
# Capture
## Path
    cset "name='AIF1ADC1L Mixer ADC/DMIC Switch' on"
    cset "name='AIF1ADC1R Mixer ADC/DMIC Switch' on"
  ]
  DisableSequence [
# Playback
    cset "name='DAC1 Switch' off"
    cset "name='DAC1L Mixer AIF1.1 Switch' off"
    cset "name='DAC1R Mixer AIF1.1 Switch' off"
# Capture
    cset "name='AIF1ADC1L Mixer ADC/DMIC Switch' off"
    cset "name='AIF1ADC1R Mixer ADC/DMIC Switch' off"
  ]

  Value {
    TQ "Music"
    PlaybackCTL "hw:0"
    CaptureCTL "hw:0"
  }
}

SectionDevice."Headphones" {
  Comment "3.5mm Headphones"

  EnableSequence [
# Gain
    cset "name='Left Output Mixer DAC Volume' 7"
    cset "name='Right Output Mixer DAC Volume' 7"
    cset "name='Headphone Volume' 50,50"
# Path
    cset "name='Right Headphone Mux' DAC"
    cset "name='Left Headphone Mux' DAC"
    cset "name='Right Output Mixer DAC Switch' on"
    cset "name='Left Output Mixer DAC Switch' on"
    cset "name='Headphone Switch' on"
    cset "name='HP Switch' on"
  ]

  DisableSequence [
    cset "name='Right Output Mixer DAC Switch' off"
    cset "name='Left Output Mixer DAC Switch' off"
    cset "name='Headphone Switch' off"
    cset "name='HP Switch' off"
  ]

  Value {
    PlaybackChannels 2
    PlaybackPCM "hw:0,0"
    PlaybackPriority 110
    PlaybackVolume "Headphone Volume"
    JackControl "HP Jack"
  }
}

SectionDevice."Speaker" {
  Comment "built-in Speaker"

  EnableSequence [
# Gain
    cset "name='Speaker Mixer Volume' 3,3"
    cset "name='Speaker Volume' 57,57"
    cset "name='Speaker Boost Volume' 4,4"
# Path
    cset "name='SPKL DAC1 Switch' on"
    cset "name='SPKR DAC1 Switch' on"
    cset "name='SPKL Boost SPKL Switch' on"
    cset "name='SPKR Boost SPKR Switch' on"
    cset "name='Speaker Switch' on"
    cset "name='SPK Switch' on"
  ]

  DisableSequence [
# Path
    cset "name='SPKL DAC1 Switch' off"
    cset "name='SPKR DAC1 Switch' off"
    cset "name='SPKL Boost SPKL Switch' off"
    cset "name='SPKR Boost SPKR Switch' off"
    cset "name='Speaker Switch' off"
    cset "name='SPK Switch' off"
  ]

  Value {
    PlaybackChannels 1
    PlaybackPCM "hw:0,0"
    PlaybackPriority 105
    PlaybackVolume "Speaker Volume"
  }
}

SectionDevice."Earpiece" {
  Comment "built-in earpiece, receiver"

  EnableSequence [
# Gain
    cset "name='Output Volume' 61,61"
# Path
    cset "name='Left Output Mixer DAC Switch' on"
    cset "name='Right Output Mixer DAC Switch' on"
    cset "name='Earpiece Mixer Left Output Switch' on"
    cset "name='Earpiece Mixer Right Output Switch' on"
    cset "name='Output Switch' on"
    cset "name='Right Headphone Mux' Mixer"
    cset "name='Left Headphone Mux' Mixer"
    cset "name='Earpiece Switch' on"
    cset "name='RCV Switch' on"
  ]

  DisableSequence [
    cset "name='Left Output Mixer DAC Switch' off"
    cset "name='Right Output Mixer DAC Switch' off"
    cset "name='Earpiece Mixer Left Output Switch' off"
    cset "name='Earpiece Mixer Right Output Switch' off"
    cset "name='Output Switch' off"
    cset "name='Right Headphone Mux' DAC"
    cset "name='Left Headphone Mux' DAC"
    cset "name='Earpiece Switch' off"
    cset "name='RCV Switch' off"
  ]

  Value {
    PlaybackChannels 1
    PlaybackPCM "hw:0,0"
    PlaybackPriority 100
    PlaybackVolume "Earpiece Volume"
  }
}

SectionDevice."Line" {
  Comment "lineout for dock"

  EnableSequence [
# Gain
    cset "name='LINEOUT2 Volume' 0"
# Path
    cset "name='Right Output Mixer DAC Switch' on"
    cset "name='Left Output Mixer DAC Switch' on"
    cset "name='LINEOUT2N Mixer Left Output Switch' on"
    cset "name='LINEOUT2P Mixer Right Output Switch' on"
    cset "name='LINEOUT2N Switch' on"
    cset "name='LINEOUT2P Switch' on"
    cset "name='LINE Switch' on"
    exec "echo VAUDIO > /sys/devices/platform/i2c-gpio-3/i2c-7/7-0025/switch"
  ]

  DisableSequence [
# Path
    cset "name='Right Output Mixer DAC Switch' off"
    cset "name='Left Output Mixer DAC Switch' off"
    cset "name='LINEOUT2N Mixer Left Output Switch' off"
    cset "name='LINEOUT2P Mixer Right Output Switch' off"
    cset "name='LINEOUT2N Switch' off"
    cset "name='LINEOUT2P Switch' off"
    cset "name='LINE Switch' off"
    exec "echo AUTO > /sys/devices/platform/i2c-gpio-3/i2c-7/7-0025/switch"
  ]

  Value {
    PlaybackChannels 2
    PlaybackPCM "hw:0,0"
    PlaybackPriority 90
    PlaybackVolume "LINEOUT2 Volume"
    JackControl "LINE Jack"
  }
}

SectionDevice."Bluetooth" {
  Comment "bluetooth sco with codec master"

  EnableSequence [
# Gain
    cset "name='AIF1ADC1 Volume' 96,96"
    cset "name='DAC2 Volume' 96,96"
    cset "name='AIF2DAC Volume' 96,96"
    cset "name='MIXINL IN1LP Volume' 0"
# Path
    cset "name='AIF2 Mode' 1"
    cset "name='AIF1DAC Mux' AIF1DACDAT"
    cset "name='AIF2DAC2L Mixer AIF1.1 Switch' on"
    cset "name='AIF2DAC2R Mixer AIF1.1 Switch' on"
    cset "name='DAC2 Switch' on"
    cset "name='AIF3ADC Mux' AIF3DACDAT"
    cset "name='AIF2DAC2L Mixer AIF2 Switch' off"
    cset "name='AIF2DAC2R Mixer AIF2 Switch' off"
    cset "name='AIF2DAC Mux' AIF3DACDAT"
    cset "name='AIF1ADC1L Mixer AIF2 Switch' on"
  ]

  DisableSequence [
    cset "name='AIF2 Mode' 0"
    cset "name='AIF2DAC2L Mixer AIF1.1 Switch' off"
    cset "name='AIF2DAC2R Mixer AIF1.1 Switch' off"
    cset "name='DAC2 Switch' off"
    cset "name='AIF3ADC Mux' AIF2ADCDAT"
    cset "name='AIF2DAC Mux' AIF2DACDAT"
    cset "name='AIF1ADC1L Mixer AIF2 Switch' off"
  ]

  Value {
    PlaybackChannels 2
    PlaybackPCM "hw:0,0"
    PlaybackPriority 95
    CaptureChannels 2
    CapturePCM "hw:0,0"
    CapturePriority 95
  }
}

SectionDevice."MainMic" {
  Comment "built-in main mic"

  EnableSequence [
# Gain
    cset "name='IN1L Volume' 29"
    cset "name='MIXINL IN1L Volume' 1"
# Path
    cset "name='Main Mic Switch' on"
    cset "name='IN1L PGA IN1LN Switch' on"
    cset "name='IN1L PGA IN1LP Switch' on"
    cset "name='IN1L Switch' on"
    cset "name='MIXINL IN1L Switch' on"
    cset "name='ADCR Mux' ADC"
    cset "name='AIF1ADCL Source' Left"
    cset "name='AIF1ADCR Source' Left"
  ]

  DisableSequence [
# Path
    cset "name='Main Mic Switch' off"
    cset "name='IN1L PGA IN1LN Switch' off"
    cset "name='IN1L PGA IN1LP Switch' off"
    cset "name='IN1L Switch' off"
    cset "name='MIXINL IN1L Switch' off"
  ]

  Value {
    CaptureChannels 1
    CapturePCM "hw:0,0"
    CapturePriority 100
    CaptureVolume "IN1L Volume"
  }
}

SectionDevice."HeadsetMic" {
  Comment "external headset mic"

  EnableSequence [
# Gain
    cset "name='IN1R Volume' 11"
    cset "name='MIXINR IN1R Volume' 1"
# Path
    cset "name='Headset Mic Switch' on"
    cset "name='IN1R PGA IN1RN Switch' on"
    cset "name='IN1R PGA IN1RP Switch' on"
    cset "name='IN1R Switch' on"
    cset "name='MIXINR IN1R Switch' on"
    cset "name='ADCR Mux' ADC"
    cset "name='AIF1ADCL Source' Right"
    cset "name='AIF1ADCR Source' Right"
  ]

  DisableSequence [
# Path
    cset "name='Headset Mic Switch' off"
    cset "name='IN1R PGA IN1RN Switch' off"
    cset "name='IN1R PGA IN1RP Switch' off"
    cset "name='IN1R Switch' off"
    cset "name='MIXINR IN1R Switch' off"
    cset "name='AIF1ADCL Source' Left"
    cset "name='AIF1ADCR Source' Left"
  ]

  Value {
    CaptureChannels 1
    CapturePCM "hw:0,0"
    CapturePriority 105
    CaptureVolume "IN1R Volume"
    JackControl "Headset Mic Jack"
  }
}

SectionModifier."Ringtone" {
  Comment "Ringtone playback"

  SupportedDevice [
    "Headphones"
  ]

  EnableSequence [
    cset "name='Headphone Volume' 32,32"
  ]

  DisableSequence [
    cset "name='Headphone Volume' 50,50"
  ]

  Value {
    PlaybackPCM "hw:0,0"
  }
}

